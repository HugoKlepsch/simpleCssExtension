{

  "manifest_version": 2,
  "name": "simpleCSS",
  "version": "1.1",

  "description": "Replaces all CSS with a simple, easy to read theme.",

  "icons": {
    "48": "icons/simpleCSS-48.png"
  },

  "permissions": [
      "activeTab"
  ],

  "browser_action": {
      "default_icon": "icons/simpleCSS-48.png",
      "default_title": "Simple CSS",
      "default_popup": "popup/chooseCSS.html"
  },

  "web_accessible_resources": [
      "css/simplicity.css"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["simpleCSS.js"]
    }
  ]

}
